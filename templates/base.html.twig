<!DOCTYPE html>
<html lang="fr">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>
		{% block title %}
		{{ appName }}
		{% endblock %}
	</title>
	<link rel="icon" href="{{ asset('themes/logo/logo.png') }}">
	<!-- Bootstrap 5 -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
		integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
		crossorigin="anonymous" referrerpolicy="no-referrer" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/brands.min.css"
		integrity="sha512-8RxmFOVaKQe/xtg6lbscU9DU0IRhURWEuiI0tXevv+lXbAHfkpamD4VKFQRto9WgfOJDwOZ74c/s9Yesv3VvIQ=="
		crossorigin="anonymous" referrerpolicy="no-referrer" />

	<link rel="stylesheet" href="{{ asset('themes/css/style-2.css') }}">
	<link rel="stylesheet" href="{{ asset('themes/css/responsive-2.css') }}"> 

	{% block javascripts %}
	{% block importmap %}
	{{ importmap('app') }}
	{% endblock %}
	{% endblock %}
</head>

<body data-turbo="false">

	<!-- Navbar -->
	<nav class="navbar d-flex justify-content-evenly">
		<div class="containe border-bottom content">
			<a class="navbar-brand" href="{{ path('accueil') }}"><img src="{{ asset('themes/logo/logo.png') }}" alt="Logo"
					height="30px"></a>
			<a href="{{ path('contact') }}" class="btn login-btn ms-auto">Nous contacter</a>
		</div>
	</nav>
	<!-- End Navbar -->

	<div class="containe right-118">
		{% for type, messages in app.flashes %}
		{% for message in messages %}
		<div class="alert alert-{{ type }} alert-dismissible fade show p-3 rounded">
			<strong class="text-{{ type }} alert-title">
				{% if type == 'danger' %}
				Echec!
				{% elseif type == 'warning' %}
				Attention!
				{% elseif type == 'info' %}
				En cours de validation!
				{% elseif type == 'success' %}
				Succès!
				{% endif %}
			</strong>
			{{ message }}
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
		{% endfor %}
		{% endfor %}
	</div>

	{% block body %}{% endblock %}

	<footer>
		<div class="containe  mr-118">
			<div class="row">
				<div class="col-sm-4">
					<a href="{{ path('accueil') }}"><img src="{{ asset('themes/logo/logo.png') }}" alt=""></a>
					<div class="">
						<ul class="reseau-sociaux">
							<li class="">
								<a href="#">
									<i class="fa-brands fa-facebook"></i>
								</a>
							</li>
							<li class="">
								<a href="#">
									<i class="fa-brands fa-instagram"></i>
								</a>
							</li>
							<li class="">
								<a href="#">
									<i class="fa-brands fa-twitter"></i>
								</a>
							</li>
							<li class="">
								<a href="#">
									<i class="fa-brands fa-youtube"></i>
								</a>
							</li>
							<li class="">
								<a href="#">
									<i class="fa-brands fa-linkedin"></i>
								</a>
							</li>
						</ul>
					</div>
				</div>
				<div class="col-sm-2 ms-auto">
					<h3>A propos</h3>
					<ul class="nav flex-column">
						<li class="nav-item">
							<a href="#application" class="nav-link">Application</a>
						</li>
						<li class="nav-item">
							<a href="#fonctionalite" class="nav-link">Fonctionalités</a>
						</li>
					</ul>
				</div>
				<div class="col-sm-2">
					<h3>Support</h3>
					<ul class="nav flex-column">
						<li class="nav-item">
							<a href="{{ path('page_faqs') }}" class="nav-link">Foire aux questions</a>
						</li>
						<li class="nav-item">
							<a href="{{ path('contact') }}" class="nav-link">Contactez-nous</a>
						</li>
					</ul>
				</div>
				<div class="col-sm-3">
					<h3>Mention légales</h3>
					<ul class="nav flex-column">
						<li class="nav-item">
							<a href="{{ path('page_conditions') }}" class="nav-link">Termes et Conditions</a>
						</li>
						<li class="nav-item">
							<a href="{{ path('page_politiques') }}" class="nav-link">Politique de confidentialité</a>
						</li>
					</ul>
				</div>
			</div>
			<div class="copyright border-top">
				<p class="text-center">© Copyright
					{{ 'now'|date('Y') }}
					-
					{{ appName }}
					- Tous Droits réservés</p>
			</div>
		</div>
	</footer>

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
		integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
		crossorigin="anonymous"></script>

	<script>
		// Sélectionne tous les éléments avec la classe ".element-cible"
		let elementsCibles = document.querySelectorAll('.accordion-button');

		// Parcourt tous les éléments et ajoute un gestionnaire d'événements à chacun
		elementsCibles.forEach(function (element) {
			element.addEventListener('click', function () {
				// Sélectionne l'élément à modifier en utilisant la classe
				let autreElement = document.querySelector('.one');

				// Supprime la classe de l'élément
				autreElement.classList.remove('one');
			});
		});
	</script>
</body>

</html>